{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://noamdata.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": ["places"],
  "properties": {
    "places": {
      "$id": "#/properties/places",
      "type": "array",
      "title": "The Places Schema",
      "items": {
        "$id": "#/properties/places/items",
        "type": "object",
        "title": "The Items Schema",
        "required": [
          "place",
          "placeType",
          "fullName",
          "shortName",
          "inside",
          "beacons",
          "contactPhone",
          "exits"
        ],
        "properties": {
          "place": {
            "$id": "#/properties/places/items/properties/place",
            "type": "integer",
            "title": "The Place Schema",
            "default": 0,
            "examples": [1]
          },
          "placeType": {
            "$id": "#/properties/places/items/properties/placeType",
            "type": "string",
            "title": "The Placetype Schema",
            "default": "building",
            "examples": ["building", "park", "hospital"],
            "pattern": "^(.*)$"
          },
          "fullName": {
            "$id": "#/properties/places/items/properties/fullName",
            "type": "string",
            "title": "The Fullname Schema",
            "default": "Full name",
            "examples": ["Big Bet Shemesh"],
            "pattern": "^(.*)$"
          },
          "shortName": {
            "$id": "#/properties/places/items/properties/shortName",
            "type": "string",
            "title": "The Shortname Schema",
            "default": "Short name",
            "examples": ["Big BS"],
            "pattern": "^(.*)$"
          },
          "inside": {
            "$id": "#/properties/places/items/properties/inside",
            "type": "array",
            "title": "The Inside Schema",
            "items": {
              "$id": "#/properties/places/items/properties/inside/items",
              "type": "object",
              "title": "The Items Schema",
              "required": ["point", "floor", "title", "subtitle", "content"],
              "properties": {
                "point": {
                  "$id": "#/properties/places/items/properties/inside/items/properties/point",
                  "type": "integer",
                  "title": "The Point Schema",
                  "default": 0,
                  "examples": [1]
                },
                "floor": {
                  "$id": "#/properties/places/items/properties/inside/items/properties/floor",
                  "type": "integer",
                  "title": "The Floor Schema",
                  "default": 0,
                  "examples": [1]
                },
                "title": {
                  "$id": "#/properties/places/items/properties/inside/items/properties/title",
                  "type": "string",
                  "title": "Point Title Schema",
                  "default": "point title",
                  "examples": ["Amanda matchmaker"],
                  "pattern": "^(.*)$"
                },
                "subtitle": {
                  "$id": "#/properties/places/items/properties/inside/items/properties/subtitle",
                  "type": "string",
                  "title": "Point Subtitle Schema",
                  "default": "point subtitle",
                  "examples": ["office"],
                  "pattern": "^(.*)$"
                },
                "content": {
                  "$id": "#/properties/places/items/properties/inside/items/properties/content",
                  "type": "array",
                  "title": "The Content Schema",
                  "items": {
                    "$id": "#/properties/places/items/properties/inside/items/properties/content/items",
                    "type": "string",
                    "title": "The Items Schema",
                    "default": "",
                    "examples": [
                      "2nd floor \nNear elevator C3 (south)\n",
                      "Staff specializes in disabilities\n",
                      "and we are hiring."
                    ],
                    "pattern": "^(.*)$"
                  }
                }
              }
            }
          },
          "beacons": {
            "$id": "#/properties/places/items/properties/beacons",
            "type": "array",
            "title": "The Beacons Schema",
            "items": {
              "$id": "#/properties/places/items/properties/beacons/items",
              "type": "object",
              "title": "The Items Schema",
              "required": [
                "beacon",
                "fullName",
                "ktid",
                "uuid",
                "major",
                "minor",
                "details",
                "points"
              ],
              "properties": {
                "beacon": {
                  "$id": "#/properties/places/items/properties/beacons/items/properties/beacon",
                  "type": "integer",
                  "title": "The Beacon Schema",
                  "default": 0,
                  "examples": [11]
                },
                "fullName": {
                  "$id": "#/properties/places/items/properties/beacons/items/properties/fullName",
                  "type": "string",
                  "title": "The Fullname Schema",
                  "default": "",
                  "examples": ["Main Gate (South)"],
                  "pattern": "^(.*)$"
                },
                "ktid": {
                  "$id": "#/properties/places/items/properties/beacons/items/properties/ktid",
                  "type": "string",
                  "title": "The Ktid Schema",
                  "default": "",
                  "examples": ["uWWf"],
                  "pattern": "^(.*)$"
                },
                "uuid": {
                  "$id": "#/properties/places/items/properties/beacons/items/properties/uuid",
                  "type": "string",
                  "title": "The Uuid Schema",
                  "default": "",
                  "examples": [""],
                  "pattern": "^(.*)$"
                },
                "major": {
                  "$id": "#/properties/places/items/properties/beacons/items/properties/major",
                  "type": "integer",
                  "title": "The Major Schema",
                  "default": 0,
                  "examples": [28999]
                },
                "minor": {
                  "$id": "#/properties/places/items/properties/beacons/items/properties/minor",
                  "type": "integer",
                  "title": "The Minor Schema",
                  "default": 0,
                  "examples": [64381]
                },
                "details": {
                  "$id": "#/properties/places/items/properties/beacons/items/properties/details",
                  "type": "array",
                  "title": "The Details Schema",
                  "items": {
                    "$id": "#/properties/places/items/properties/beacons/items/properties/details/items",
                    "type": "string",
                    "title": "The Items Schema",
                    "default": "",
                    "examples": [
                      "You are at the main gate\n",
                      "There is an ATM outside"
                    ],
                    "pattern": "^(.*)$"
                  }
                },
                "points": {
                  "$id": "#/properties/places/items/properties/beacons/items/properties/points",
                  "type": "array",
                  "title": "The Points Schema",
                  "items": {
                    "$id": "#/properties/places/items/properties/beacons/items/properties/points/items",
                    "type": "object",
                    "title": "The Items Schema",
                    "required": [
                      "point",
                      "title",
                      "subtitle",
                      "icon",
                      "direction",
                      "nearby",
                      "instructions"
                    ],
                    "properties": {
                      "point": {
                        "$id": "#/properties/places/items/properties/beacons/items/properties/points/items/properties/point",
                        "type": "integer",
                        "title": "The Point Schema",
                        "default": 0,
                        "examples": [12]
                      },
                      "title": {
                        "$id": "#/properties/places/items/properties/beacons/items/properties/points/items/properties/title",
                        "type": "string",
                        "title": "The Title Schema",
                        "default": "",
                        "examples": ["Accessible toilets 1S"],
                        "pattern": "^(.*)$"
                      },
                      "subtitle": {
                        "$id": "#/properties/places/items/properties/beacons/items/properties/points/items/properties/subtitle",
                        "type": "string",
                        "title": "The Subtitle Schema",
                        "default": "",
                        "examples": ["Accessible toilets (South, flr 1)"],
                        "pattern": "^(.*)$"
                      },
                      "icon": {
                        "$id": "#/properties/places/items/properties/beacons/items/properties/points/items/properties/icon",
                        "type": "string",
                        "title": "The Icon Schema",
                        "default": "",
                        "examples": ["toilet"],
                        "pattern": "^(.*)$"
                      },
                      "direction": {
                        "$id": "#/properties/places/items/properties/beacons/items/properties/points/items/properties/direction",
                        "type": "integer",
                        "title": "The Direction Schema",
                        "default": 0,
                        "examples": [125]
                      },
                      "nearby": {
                        "$id": "#/properties/places/items/properties/beacons/items/properties/points/items/properties/nearby",
                        "type": "boolean",
                        "title": "The Nearby Schema",
                        "default": false,
                        "examples": [true]
                      },
                      "instructions": {
                        "$id": "#/properties/places/items/properties/beacons/items/properties/points/items/properties/instructions",
                        "type": "array",
                        "title": "The Instructions Schema",
                        "items": {
                          "$id": "#/properties/places/items/properties/beacons/items/properties/points/items/properties/instructions/items",
                          "type": "string",
                          "title": "The Items Schema",
                          "default": "",
                          "examples": [
                            "10 meters ahead\n",
                            "Entrance is 7 meters to your right.\n",
                            "Call 051-222-333 for assistance"
                          ],
                          "pattern": "^(.*)$"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "contactPhone": {
            "$id": "#/properties/places/items/properties/contactPhone",
            "type": "string",
            "title": "The Contactphone Schema",
            "default": "",
            "examples": ["029919366"],
            "pattern": "^(.*)$"
          },
          "exits": {
            "$id": "#/properties/places/items/properties/exits",
            "type": "array",
            "title": "The Exits Schema",
            "items": {
              "$id": "#/properties/places/items/properties/exits/items",
              "type": "object",
              "title": "The Items Schema",
              "required": ["beacon"],
              "properties": {
                "beacon": {
                  "$id": "#/properties/places/items/properties/exits/items/properties/beacon",
                  "type": "object",
                  "title": "The Beacon Schema",
                  "required": ["id", "instruction"],
                  "properties": {
                    "id": {
                      "$id": "#/properties/places/items/properties/exits/items/properties/beacon/properties/id",
                      "type": "integer",
                      "title": "The Id Schema",
                      "default": 0,
                      "examples": [11]
                    },
                    "instruction": {
                      "$id": "#/properties/places/items/properties/exits/items/properties/beacon/properties/instruction",
                      "type": "string",
                      "title": "The Instruction Schema",
                      "default": "",
                      "examples": [
                        "Follow the hall to the north 20 steps and then to the left, out of the building"
                      ],
                      "pattern": "^(.*)$"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
